@model Fall2024_Assignment3_jlcrawford3.Models.MovieActor

@{
    ViewData["Title"] = "Add Cast Member";
}

<div class="theater-container cast-background">
    <div class="content-card">
        <div class="card-header">
            <h1 class="page-title">Add Cast Member</h1>
        </div>
        <div class="card-body">
            <div class="form-container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                    
                    <div class="form-group">
                        <label asp-for="MovieId" class="control-label">Movie</label>
                        <select asp-for="MovieId" class="form-control" asp-items="ViewBag.MovieId">
                            <option value="">-- Select Movie --</option>
                        </select>
                        <span asp-validation-for="MovieId" class="validation-message"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ActorId" class="control-label">Actor</label>
                        <select asp-for="ActorId" class="form-control" asp-items="ViewBag.ActorId">
                            <option value="">-- Select Actor --</option>
                        </select>
                        <span asp-validation-for="ActorId" class="validation-message"></span>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-add">Create</button>
                        <a asp-action="Index" class="btn btn-back">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
