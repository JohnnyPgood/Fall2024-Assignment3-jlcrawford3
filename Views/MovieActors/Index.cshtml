@model IEnumerable<Fall2024_Assignment3_jlcrawford3.Models.MovieActor>

@{
    ViewData["Title"] = "Casts";
}

<div class="theater-container cast-background">
    <div class="content-card">
        <div class="card-header">
            <h1 class="display-4 text-center">Cast Lists</h1>
        </div>
        <div class="card-body">
            <div class="action-bar">
                <a asp-action="Create" class="btn btn-add">Add New Cast Entry</a>
            </div>
            <div class="table-container">
                <table class="table datatables">
                    <thead>
                        <tr>
                            <th>Movie</th>
                            <th>Actor</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Movie?.Poster))
                                    {
                                        <a href="@item.Movie.Poster" target="_blank">
                                            <img src="@item.Movie.Poster" alt="@item.Movie.Title Poster" class="thumbnail" />
                                        </a>
                                    }
                                    @Html.DisplayFor(modelItem => item.Movie!.Title)
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Actor?.Photo))
                                    {
                                        <a href="@item.Actor.Photo" target="_blank">
                                            <img src="@item.Actor.Photo" alt="@item.Actor.Name Photo" class="thumbnail" />
                                        </a>
                                    }
                                    @Html.DisplayFor(modelItem => item.Actor!.Name)
                                </td>
                                <td class="action-links">
                                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
