@model Fall2024_Assignment3_jlcrawford3.Models.Movie

@{
    ViewData["Title"] = "Add Movie";
}

<div class="theater-contaier movie-background">
    <div class="content-card">
        <div class="card-header">
            <h1 class="page-title">Add New Movie</h1>
        </div>
        <div class="card-body">
            <div class="form-container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Imdb" class="control-label"></label>
                        <input asp-for="Imdb" class="form-control" />
                        <span asp-validation-for="Imdb" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label"></label>
                        <input asp-for="Genre" class="form-control" />
                        <span asp-validation-for="Genre" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Poster" class="control-label"></label>
                        <input asp-for="Poster" class="form-control" />
                        <span asp-validation-for="Poster" class="text-danger"></span>
                    </div>
                    <div class="form-actions">
                        <input type="submit" value="Create" class="btn btn-add" />
                        <a asp-action="Index" class="btn btn-back">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
