@model Fall2024_Assignment3_jlcrawford3.Models.ViewModels.MovieDetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Movie</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Imdb)
        </dt>
        <dd class="col-sm-10">
            <a href="@Model.Movie.Imdb" target="_blank">IMDB Link</a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie.Year)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Movie.Year)
        </dd>
        <dt class = "col-sm-2">
            Poster
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Movie.Poster" alt="@Model.Movie.Title poster" style="max-width: 200px;" />
        </dd>
    </dl>

    <h4>Actors</h4>
    <ul>
        @foreach (var actor in Model.Actors)
        {
            <li><a asp-controller="Actors" asp-action="Details" asp-route-id="@actor.Id">@actor.Name</a></li>
        }
    </ul>

    <h4>Overall Sentiment: @Model.OverallSentiment.ToString("F2")</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Review</th>
                <th>Sentiment</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (Review, Sentiment) in Model.Reviews)
            {
                <tr>
                    <td>@Review</td>
                    <td>@Sentiment.ToString("F2")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Movie.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
