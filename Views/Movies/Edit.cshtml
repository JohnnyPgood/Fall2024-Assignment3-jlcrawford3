@model Fall2024_Assignment3_jlcrawford3.Models.Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<div class="theater-container movie-background">
    <div class="content-card">
        <div class="card-header">
            <h1 class="page-title">Edit Movie</h1>
        </div>
        <div class="card-body">
            <div class="form-container">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="validation-message"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Imdb" class="control-label"></label>
                        <input asp-for="Imdb" class="form-control" />
                        <span asp-validation-for="Imdb" class="validation-message"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label"></label>
                        <input asp-for="Genre" class="form-control" />
                        <span asp-validation-for="Genre" class="validation-message"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Year" class="control-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="validation-message"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Poster" class="control-label"></label>
                        <input asp-for="Poster" class="form-control" />
                        <span asp-validation-for="Poster" class="validation-message"></span>
                    </div>
                    
                    <div class="form-actions">
                        <button type="submit" class="btn btn-add">Save Changes</button>
                        <a asp-action="Index" class="btn btn-back">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
